
<% if @recipes.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% end %>

<div class="container">
  <div class="homepage">
    <h1> Rotten_<span style="color:red;">Potatoes</span> </h1>
    <div class="row homepage-content">
      <div class="col-sm-2">
        <h4>By Genre</h4>
        <% @genres.each do |genre| %>
          <%= genre.name %><br>
        <% end %>
      </div>
      <div class="col-sm-5">
        <h4>In theaters now</h4>
        <% @in_theaters.each do |movie| %>
          <%= link_to movie.title, movie_path(:id => movie.id) %> - <%= movie.release %><br>
        <% end %>
      </div>
      <div class="col-sm-5">
        <h4>Coming Soon</h4>
        <% @coming_soon.each do |movie| %>
        <%= link_to movie.title, movie_path(:id => movie.id) %> - <%= movie.release %><br>
        <% end %>
      </div>
    </div>
</div>
