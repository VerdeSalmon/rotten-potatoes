<h2>Login</h2>

<%= form_with scope: :session, url: login_path, local: true do |form| %>

  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid.</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit "Login" %>
  </p>
<% end %>
