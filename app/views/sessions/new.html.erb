<h2>Login</h2>

<%= form_with scope: :session, url: login_path, local: true do |form| %>

  <h3><%= @errors if @errors %></h3>

  <p>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit "Login" %>
  </p>
<% end %>
