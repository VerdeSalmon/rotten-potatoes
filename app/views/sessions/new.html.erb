<div class="user-container" id="user-login">

  <h2>Login</h2>

  <%= form_with scope: :session, url: login_path, local: true do |form| %>

    <h3><%= @errors if @errors %></h3>
    <br>
    <p>
      <%= form.label "Email: " %><br>
      <%= form.email_field :email %>
    </p>

    <p>
      <%= form.label "Password: " %><br>
      <%= form.password_field :password %>
    </p>

    <p>
      <%= form.submit "Login" %>
    </p>
  <% end %>

</div>
